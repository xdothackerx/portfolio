<div class="row">
  <div class="panel callout radius">
    <h3>
      <strong><%= @post.title %></strong><br />
    </h3>

    <p>
      <%= @post.body %>
    </p>

    <h4 id="author">
      <small>
        <b>By:</b>
        <%= @post.author.email %>
      </small>
    </h4>

    <h4 id="status">
      <small>
        <b>Status:</b>
          <% if @post.published? %>
            Published
          <% else %>
            Not Published
          <% end %>
      </small>
    </h4>

    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </div>

  <% if current_user %>
  <%= render 'comments/form' %>
  <% end %>

  <h5><strong>Waddaya Say?</strong></h5>
  <% @post.comments.each do |comment| %>
    <% if comment.id != nil && comment.approved? || comment.id != nil && policy(comment).modify? %>
      <div class="panel radius">
        <% if policy(comment).modify? %>
          <%= render 'comments/approved' %>
        <% end %>
        <%= link_to comment.author, post_comment_url(@post, comment) %>
        <blockquote><%= comment.content %></blockquote>
      </div>
    <% end %>
  <% end %>
  <%= link_to 'All Comments', post_comments_path(@post) %>
</div>
