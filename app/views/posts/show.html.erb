<p id="notice"><%= notice %></p>

<div class="row">
  <div class="panel radius">
    <h3>
      <strong><%= @post.title %></strong><br />
    </h3>

    <p>
      <%= @post.body %>
    </p>

    <h4 id="author">
      <small>
        <b>By:</b>
        <%= @post.author.email %>
      </small>
    </h4>

    <% if @post.published?

    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </div>
</div>
