<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class="alert-box alert radius" align="center">
      <h5><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h5>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="small-12 columns">
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>

    <% if current_user.role == "editor" %>
      <div class="row">
        <div class="small-3 small-centered columns" align="center">
          <div class="field">
            <%= f.label :published, title: "Is this post published?" %>
            <%= f.check_box :published, :id => "published" %>
          </div>
        </div>
      </div>
    <% end %>

    <br />
    <div class="actions" align="center">
      <%= f.submit %>
    </div>
  </div>
<% end %>
