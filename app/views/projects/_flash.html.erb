  <% if @project.errors.any? %>
    <div id="error_explanation">
      <div class="alert-box radius">
        You messed up <%= pluralize(@project.errors.count, "time")%>! Fix those first. :)
        <ul>
          <% @project.errors.full_messages.each do |msg| %>
            <li><small>
              <%= msg %>
            </small></li>
            <% end %>
        </ul>
      </div>
    </div>
  <% end %>
