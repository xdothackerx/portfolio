<% if flash[:alert] %>
  <div data-alert class="alert-box alert radius">
    <a href="#" class="close" align="left">&times;</a>
    <%= alert %>
  </div>
<% end %>
  <% if flash[:notice] %>
  <div data-alert class="alert-box success radius">
    <a href="#" class="close" align="left">&times;</a>
    <%= notice %>
  </div>
<% end %>
